<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="20dip"
    android:paddingRight="20dip"
    android:paddingTop="15dip"
    android:background="@drawable/listview_item_button_middle_selector" >
    
    <LinearLayout
        android:id="@+id/text_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/arrow"
        android:orientation="horizontal" >
        
        <ImageView
            android:id="@+id/icon"
            android:layout_width="50dip"
            android:layout_height="50dip"
            android:paddingRight="5dip"
            android:src="@drawable/logo_facebook"
            android:scaleType="centerInside"
            android:visibility="gone" />
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="vertical" >
            
            <TextView
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="塞车状况"
                android:textColor="@color/rm_content_main_text_color"
                android:textSize="@dimen/rmcontent_main_text_size" />
            
            <TextView
                android:id="@+id/subtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ssssssssss"
                android:textColor="@color/rm_content_subtitle_text_color"
                android:textSize="@dimen/rmcontent_subtitle_text_size"
                android:visibility="gone" />
            
        </LinearLayout>
        
    </LinearLayout>
    
    <ImageView
        android:id="@+id/arrow"
        android:layout_width="20dip"
        android:layout_height="match_parent"
        android:layout_alignTop="@+id/text_layout"
        android:layout_alignBottom="@+id/text_layout"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/list_arrow"
        android:scaleType="centerInside" />
    
    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_below="@+id/text_layout"
        android:layout_marginTop="15dip"
        android:background="@color/divider_treemenu" />

</RelativeLayout>
